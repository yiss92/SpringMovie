<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="ddd" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://203.236.209.87:3306/spring_moviedb" />
		<property name="username" value="root" />
		<property name="password" value="hanbit" />
	</bean>

	<bean id="bbb" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="typeAliasesPackage" value="vo" />
		<property name="mapperLocations" value="classpath:/mapper/*.xml" />
		<property name="dataSource" ref="ddd" />
	</bean>

	<bean id="session" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="bbb" />
	</bean>

	<context:annotation-config />
	<context:component-scan base-package="repository" />
	<context:component-scan base-package="service"/>

</beans>
